@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelleme Sayfası</h2>

@using (Html.BeginForm("EditAdmin", "Autohorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.adminId, new { @class = "form-control" })
        <br />
        @Html.Label("Admin Kullanıcı Adı:")
        @Html.TextBoxFor(x => x.adminUserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.adminUserName)
        <br />
        @Html.Label("Şifre: ")
        @Html.TextAreaFor(x => x.adminPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.adminPassword)
        <br />
        @Html.Label("Rol: ")
        @Html.TextAreaFor(x => x.adminRole, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.adminRole)
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}

