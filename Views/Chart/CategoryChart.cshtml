@{
    ViewBag.Title = "KategoriChart";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Kategori Grafiği</title>

    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
        google.charts.load('current', { packages: ['corechart'] });

        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("KategoriChart", "Chart")',
                type: 'GET',
                dataType: 'json',
                success: function (result) {
                    console.log("Veri geldi:", result);
                    google.charts.setOnLoadCallback(function () {
                        drawChart(result);
                    });
                },
                error: function (xhr, status, error) {
                    console.log("AJAX Hatası:", error);
                }
            });
        });

        function drawChart(result) {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Kategori');
            data.addColumn('number', 'Başlık Sayısı');

            var rows = [];
            $.each(result, function (i, obj) {
                rows.push([obj.CategoryName, obj.CategoryCount]);
            });
            data.addRows(rows);

            var options = {
                title: 'Kategorilere Göre Başlık Sayısı',
                width: 900,
                height: 600
            };

            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>
</head>
<body>
    <h2 style="text-align:center">Kategorilere Göre Başlık Sayısı</h2>
    <div id="chart_div" style="width:900px; height:600px; margin:auto;"></div>
</body>
</html>
